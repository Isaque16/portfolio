---
import "../style/main.scss";
import Footer from "../sections/Footer.astro";
const siteUrl = "https://isaque16-portfolio.vercel.app";
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <!-- Preconnect para recursos externos -->
    <link href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://cdnjs.cloudflare.com" rel="preconnect" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <!-- Title: Portfolio's title here -->
    <title>Isaque16 | Portfolio</title>

    <!-- SEO Meta Tags -->
    <meta content="Isaque16, Isaque Costa, Portfolio, Desenvolvedor Web, Front-end, Full-stack, JavaScript, TypeScript, Next.js" name="keywords" />
    <meta content="Portfólio de Isaque Costa - Desenvolvedor Web especializado em JavaScript, TypeScript e tecnologias frontend" name="description" />
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Isaque Costa" />

    <!-- Favicon -->
    <link href="/images/portfolio.png" rel="icon" type="image/png" />
    <link rel="apple-touch-icon" href="/images/portfolio.png" />

    <!-- Primary-theme color for the value of content -->
    <meta content="#36d1dc" name="theme-color" />

    <!-- Open Graph / Facebook -->
    <meta content="website" property="og:type" />
    <!-- Fill content with the URL of this portfolio host -->
    <meta content={siteUrl} property="og:url" />
    <!-- Fill content with the title of your portfolio -->
    <meta content="Isaque16 | Portfolio" property="og:title" />
    <!-- Short description that'll show up when you/someone shares the portfolio on a different platform -->
    <meta content="Portfólio de Isaque Costa" property="og:description" />
    <!-- Add a thumbnail image in the public folder and fill the content attr with URL to that thumbnail
      so that a thumbnail image of your portfolio is shown while shared on another platform -->
    <meta
      content={siteUrl}
      property="og:image"
    />

    <!-- FontAwesome Icons link -->
    <link
      crossorigin="anonymous"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
      integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
      referrerpolicy="no-referrer"
      rel="stylesheet"
    />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Isaque Costa",
        "url": "https://isaque16-portfolio.vercel.app",
        "sameAs": [
          "https://github.com/Isaque16",
          "https://www.linkedin.com/in/isaque-costa16/"
        ],
        "jobTitle": "Desenvolvedor Web"
      }
    </script>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<script>
  import "../assets/js/scrollveal";
</script>
